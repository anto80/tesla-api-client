{
    "name": "avido/tesla-api-client",
    "description": "Simple Tesla API Client",
    "type": "library",
    "authors": [{
        "name": "Sebastiaan",
        "email": "sebastiaan@avido.nl"
    }],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "overtrue/phplint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Avido\\TeslaApiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "style": "vendor/bin/phpcs --standard=PSR2 --extensions=php --colors src/*",
        "lint": "vendor/bin/phplint --no-configuration --no-cache --no-interaction --extensions=php src/*"
    }
}
